{
    "kind": "collectionType",
    "collectionName": "blog_posts",
    "info": {
      "singularName": "blog-post",
      "pluralName": "blog-posts",
      "displayName": "BlogPost",
      "description": "Posts del blog de Navia"
    },
    "options": {
      "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
      "slug": {
        "type": "string",
        "required": true,
        "unique": true
      },
      "locale": {
        "type": "enumeration",
        "enum": ["es", "en"],
        "required": true,
        "default": "es"
      },
      "title": {
        "type": "text",
        "required": true
      },
      "metaDescription": {
        "type": "text",
        "required": true
      },
      "summary": {
        "type": "text",
        "required": true
      },
      "author": {
        "type": "string",
        "required": true,
        "default": "Equipo Navia"
      },
      "date": {
        "type": "datetime",
        "required": true
      },
      "content": {
        "type": "text",
        "required": true
      },
      "status": {
        "type": "enumeration",
        "enum": ["draft", "published", "scheduled"],
        "required": true,
        "default": "draft"
      },
      "autoGenerated": {
        "type": "boolean",
        "default": false
      }
    }
  }